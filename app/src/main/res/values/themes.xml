<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Stylistet" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="homeAsUpIndicator">@drawable/back_reverse</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/main_font</item>
        <item name="fontFamily">@font/main_font</item>
    </style>


    <style name="CustomChip" parent="Base.Widget.MaterialComponents.Chip">
        <item name="android:checkable">true</item>

        <item name="chipIconVisible">false</item>
        <item name="checkedIconVisible">false</item>
        <item name="closeIconVisible">false</item>

        <item name="checkedIcon">@drawable/ic_mtrl_chip_checked_black</item>
        <item name="chipStrokeColor">@color/choise_chip_text</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/choise_chip_text</item>
        <item name="chipBackgroundColor">@color/chip_bk</item>
        <item name="rippleColor">@color/chip_ripple</item>

    </style>

    <style name="Theme.Stylistet.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Stylistet.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Stylistet.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>